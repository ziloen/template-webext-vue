{
  "name": "vitesse-webext",
  "displayName": "Vitesse WebExt",
  "version": "0.0.1",
  "private": true,
  "description": "[description]",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build",
    "start:chromium": "web-ext run --target=chromium",
    "start:firefox": "web-ext run",
    "clear": "rimraf extension/dist extension/manifest.json",
    "lint": "eslint --cache .",
    "test": "vitest test"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.1.9",
    "@iconify/json": "^2.2.35",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.3",
    "@types/webextension-polyfill": "^0.10.0",
    "@unocss/reset": "^0.50.6",
    "@vitejs/plugin-vue": "^4.1.0",
    "@volar-plugins/prettyhtml": "^1.1.0",
    "@vue/test-utils": "^2.3.1",
    "@vueuse/core": "^9.13.0",
    "@ziloen/eslint-config": "^0.0.84",
    "@ziloen/eslint-config-format": "^0.0.84",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.36.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.0",
    "jsdom": "^21.1.1",
    "kolorist": "^1.7.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.0",
    "typescript": "^5.0.2",
    "unocss": "^0.50.6",
    "unplugin-auto-import": "^0.15.1",
    "unplugin-icons": "^0.15.3",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.2.0",
    "vitest": "^0.29.3",
    "vue": "^3.2.47",
    "web-ext": "^7.5.0",
    "webext-bridge": "^5.0.5",
    "webextension-polyfill": "^0.10.0"
  },
  "eslintConfig": {
    "rules": {
      "react/no-unknown-property": 0
    },
    "extends": [
      "@ziloen",
      "@ziloen/eslint-config-format"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "settings": {
      "react": {
        "version": "18"
      }
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "public",
      "volar.config.js",
      "extension"
    ]
  },
  "webExt": {
    "sourceDir": "extension",
    "artifactsDir": "./",
    "ignoreFiles": [
      "package-lock.json",
      "yarn.lock",
      "pnpm-lock.yaml"
    ],
    "run": {
      "browserConsole": false,
      "firefoxPreview": [
        "mv3"
      ],
      "firefox": "nightly",
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  }
}