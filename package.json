{
  "name": "vitesse-webext",
  "displayName": "Vitesse WebExt",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "[description]",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build-firefox": "cross-env NODE_ENV=production EXTENSION=firefox run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build",
    "start:chromium": "web-ext run --target=chromium",
    "start:firefox": "web-ext run",
    "clear": "rimraf extension/dist extension/manifest.json",
    "lint": "eslint --cache .",
    "test": "vitest test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@ffflorian/jszip-cli": "^3.5.6",
    "@iconify/json": "^2.2.151",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.3",
    "@types/webextension-polyfill": "^0.10.7",
    "@unocss/reset": "^0.58.0",
    "@vitejs/plugin-legacy": "5.2.0",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vue/test-utils": "^2.4.3",
    "@ziloen/eslint-config": "0.1.11",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "esbuild": "0.19.8",
    "eslint": "^8.55.0",
    "esno": "^4.0.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^23.0.1",
    "kolorist": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "ts-lib-enhance": "^1.0.16",
    "type-fest": "4.8.3",
    "typescript": "^5.3.2",
    "unocss": "^0.58.0",
    "unocss-preset-ziloen": "^0.0.4",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-icons": "^0.18.1",
    "unplugin-vue": "4.5.1",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-jsx": "0.2.2",
    "vite": "^5.0.4",
    "vitest": "^0.34.6",
    "volar-service-prettyhtml": "^0.0.17",
    "vue": "^3.3.9",
    "web-ext": "^7.8.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "@vueuse/core": "10.6.1",
    "@vueuse/rxjs": "^10.6.1",
    "@wai-ri/core": "^0.0.101",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.7",
    "rxjs": "^7.8.1",
    "serialize-error": "11.0.3",
    "ulid": "^2.3.0"
  },
  "webExt": {
    "sourceDir": "extension",
    "artifactsDir": "./",
    "ignoreFiles": [
      "package-lock.json",
      "yarn.lock",
      "pnpm-lock.yaml"
    ],
    "run": {
      "browserConsole": false,
      "firefoxPreview": [
        "mv3"
      ],
      "firefox": "nightly",
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  }
}